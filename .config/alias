#!/bin/bash

alias rld='source $HOME/.profile'

alias c='clear'
alias q='exit'
alias cd..='cd ..'
alias la='ls -hAlv --color=auto'
alias grep='grep -i --color=auto'
alias diff='diff --color=auto'
alias m='make'
alias mc='(make distclean || make clean) 2>/dev/null'
alias mx='make run'

alias cp='cp -ri'
alias mv='mv -i'
alias rm='rm -r --preserve-root --interactive=once'
alias mkdir='mkdir -p'
alias trunc='truncate -s 0'
alias chown='chown -R'
alias chmod='chmod -R'
alias p='ping'

alias gs='git status'
alias gu='git remote -v update'
alias ga='git add'
alias gA='git add -A'
alias gc='git commit -m'
alias gcA='git commit -am'
alias gf='git fetch'
alias gr='git pull'
alias gw='git push'
alias grr='git submodule update --remote'
alias gx='git reset'
alias gb='git branch'
alias go='git checkout'
alias goo='git checkout --'
alias gh='git stash'
alias gd='git diff'
alias gC='git clone --recurse-submodules'
alias gl='git log --graph --pretty=oneline --abbrev-commit'

